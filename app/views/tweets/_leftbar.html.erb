<div class="col-md-3 leftbar">
  <ul>
    <li><i class="fab fa-twitter"></i></li>
    <li><%= link_to ' Home', tweets_path, class: "glyphicon glyphicon-home" %></li>
    <li><%= link_to ' Users', users_path, class: "glyphicon glyphicon-user"%></li>
    <% if user_signed_in? %>
      <li><%= link_to ' Profile', user_path(current_user), class: "glyphicon glyphicon-info-sign"%></li>
      <li><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
      <li>
        <%= link_to "Tweet", new_tweet_path, class: "tweet-btn" %>
      </li>
    <% else %>
      <li><%= link_to " Singup", new_user_registration_path, class: "glyphicon glyphicon-plus-sign" %></li>
      <li><%= link_to " Login", new_user_session_path, class: "glyphicon glyphicon-log-in"%></li>
    <% end %>
  </ul>
</div>